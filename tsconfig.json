{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["assets/*"],
      "@context/*": ["src/context/*"],
      "@constants/*": ["src/constants/*"],
      "@/*": ["src/*"]  // Add this line to support @/utils format
    }
  }
}